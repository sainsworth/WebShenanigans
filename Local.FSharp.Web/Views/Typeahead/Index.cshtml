@model IEnumerable<Local.FSharp.Web.Ontology>

@section scripts {

@Scripts.Render(Url.Content("~/Scripts/Typeahead/Main.js?v=1"))

}

@*https://stackoverflow.com/questions/6835835/jquery-simple-polling-example*@

<div class="row">
    <div class="col-md-11">
        <h1>Ontology Type-ahead Test Page</h1>
    </div>
    <div class="col-md-1">
        <br />
        <a class="btn btn-default" href="OntologyTypeahead/Status">API Status</a>
    </div>
</div>
<hr />
<h3>Jquery-UI</h3>
<div id="jq_group" class="row">
    <div class="col-md-1">
        &nbsp;
    </div>
    <div class="col-md-2">
        <label for="jq_a_towns">Towns starting with A</label>
    </div>
    <div class="col-md-2">
        <input id="jq_a_towns" title="towns starting with a..." />
    </div>
    <div class="col-md-7">
        Using the API to get the data but only rendering the values - not doing anything useful with the IDs
    </div>
</div>
<hr />
<h3>Typeahead.js</h3>
<div id="boxes-add" class="row">
    <div class="col-md-1">
        &nbsp;
    </div>
    <div class="col-md-2">
        <label for="boxes-a-towns">Towns starting with A</label>
    </div>
    <div class="col-md-2" id="a-towns-group">
        <input id="boxes-a-towns" title="Towns starting with A" />
    </div>
    <div class="col-md-7">
        Will use the API to add items to the display below...
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="boxes-collection" class="box-container">
        </div>
    </div>
</div>


@foreach (var x in Model)
{
    <div class="row">
        <div class="col-md-1">
            @x.Accessor
        </div>
        <div class="col-md-1">
            @x.Label
        </div>
    </div>
}